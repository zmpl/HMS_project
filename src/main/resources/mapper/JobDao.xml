<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.JobDao">

    <resultMap type="com.entity.Job" id="JobMap">
        <result property="jobid" column="jobId" jdbcType="INTEGER"/>
        <result property="jobname" column="jobName" jdbcType="VARCHAR"/>
        <result property="jobinfo" column="jobInfo" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="JobMap">
        select
          jobId, jobName, jobInfo
        from pms.job
        where jobId = #{jobid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="JobMap">
        select
          jobId, jobName, jobInfo
        from pms.job
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="JobMap">
        select
          jobId, jobName, jobInfo
        from pms.job
        <where>
            <if test="jobid != null">
                and jobId = #{jobid}
            </if>
            <if test="jobname != null and jobname != ''">
                and jobName = #{jobname}
            </if>
            <if test="jobinfo != null and jobinfo != ''">
                and jobInfo = #{jobinfo}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="jobid" useGeneratedKeys="true">
        insert into pms.job(jobName, jobInfo)
        values (#{jobname}, #{jobinfo})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update pms.job
        <set>
            <if test="jobname != null and jobname != ''">
                jobName = #{jobname},
            </if>
            <if test="jobinfo != null and jobinfo != ''">
                jobInfo = #{jobinfo},
            </if>
        </set>
        where jobId = #{jobid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from pms.job where jobId = #{jobid}
    </delete>

</mapper>