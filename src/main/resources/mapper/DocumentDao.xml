<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.DocumentDao">

    <resultMap type="com.entity.Document" id="DocumentMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="filename" column="fileName" jdbcType="VARCHAR"/>
        <result property="createtime" column="createTime" jdbcType="OTHER"/>
        <result property="userid" column="userId" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="DocumentMap">
        select
          id, title, fileName, createTime, userId
        from pms.document
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DocumentMap">
        select
          id, title, fileName, createTime, userId
        from pms.document
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="DocumentMap">
        select
          id, title, fileName, createTime, userId
        from pms.document
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="filename != null and filename != ''">
                and fileName = #{filename}
            </if>
            <if test="createtime != null">
                and createTime = #{createtime}
            </if>
            <if test="userid != null">
                and userId = #{userid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into pms.document(title, fileName, createTime, userId)
        values (#{title}, #{filename}, #{createtime}, #{userid})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update pms.document
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="filename != null and filename != ''">
                fileName = #{filename},
            </if>
            <if test="createtime != null">
                createTime = #{createtime},
            </if>
            <if test="userid != null">
                userId = #{userid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from pms.document where id = #{id}
    </delete>

</mapper>